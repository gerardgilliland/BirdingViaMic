<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:screenOrientation="portrait"
    android:background="@color/black"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/linen" >
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/spacer"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_below="@id/toolbar"
        android:textSize="6.0sp" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:screenOrientation="portrait"
    android:layout_below="@id/spacer"
    android:scrollbars="none">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:gravity="center" >

    <Button
        android:id="@+id/song_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/song_label" />
    <Button
        android:id="@+id/record_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/record_label" />
    <Button 
        android:id="@+id/play_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/play_label" />

    <TextView
        android:text="" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:textSize="6.0sp" />
    
    <Button 
        android:id="@+id/species_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/species_label" />

    <Button 
        android:id="@+id/web_browser_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/web_view_label" />

    <Button 
        android:id="@+id/options_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/options_label" />
      
    <TextView
        android:text="" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:textSize="6.0sp" />
    
    <Button 
        android:id="@+id/redlist_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/redlist_label" />

    <Button
        android:id="@+id/region_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/region_label" />

    <Button
        android:id="@+id/location_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/location_label" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:textSize="6.0sp" />

    <Button
        android:id="@+id/songpath_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/select_songpath_label" />

    <Button
        android:id="@+id/my_list_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/my_list_label" />

    <Button
        android:id="@+id/backup_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/backup_label" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:textSize="6.0sp" />

    <Button
        android:id="@+id/register_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/register_label" />

    <Button
        android:id="@+id/help_button"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@drawable/text_state"
        android:background="@drawable/background_state"
        android:text="@string/help_label" />

    </LinearLayout>
    </ScrollView>
    </RelativeLayout>